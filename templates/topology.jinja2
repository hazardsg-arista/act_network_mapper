veos:
  # Define the global vEOS node parameters
  username: admin
  password: Arista123!
  version: 4.31.3M

cvp:
  # Define the global CVP node parameters
  username: root
  password: cvproot
  version: 2024.1.0
  instance: singlenode

generic:
  # Define the global generic node parameters
  version: rocky-8-10
  username: admin
  password: Arista123!

nodes:
  # Define individual node parameters
  #   - Parameters here will override global parameters

  - cvp:
      ip_addr: 192.168.0.5
      node_type: cvp
      auto_configuration: true

##############################
# Nodes generated by Script  #
##############################

{% for node in nodes %}
  - {{node}}:
      ip_addr: 192.168.0.{{loop.index + 10}}
      node_type: veos
      {% if device_models[node] != 'VEOS' %}device_model: {{device_models[node]}}{% endif %}{% endfor %}


###############################
# Links Generated by Script   #
###############################

links:

{% for connection in connections %}
  - connection:
    - {{connection[0]}}
    - {{connection[1]}}
{% endfor %}
